.my-red
	color: #ffcccb
.my-orange
	color: orange
.my-green
	color: green
.my-yellow
	color: yellow
.my-violet
	color: violet

.my-bold
	font-weight: bold
	padding-right: 10px


.my-container
	display: grid
	grid-template-columns: calc(25% - 10px) calc(75% - 15px)
	grid-gap: 10px
	color: black



.my-box
	border-radius: 25px
	background: rgb(241,13,152)
	background: linear-gradient(135deg, rgba(241,13,152,1) 0%, rgba(237,89,161,1) 3%, rgba(196,11,111,1) 100%)
	padding: 25px




.my-title
	background: rgb(40,208,76)
	background: linear-gradient(135deg, rgba(40,208,76,1) 0%, rgba(89,97,237,1) 32%, rgba(196,191,11,1) 100%)
	background-clip: text
	color: white
	color: rgba(0,0,0,0)
	font-size: 24pt
	line-height: 1em


.my-name
	grid-column: 1/3
	grid-row: 1
	font-size: 72pt
	text-align: center

.my-info
	grid-column: 1
	grid-row: 2


.my-long-info
	grid-column: 2
	grid-row: 2/6


.my-ninja-info
	grid-column: 1
	grid-row: 3

.my-stats
	grid-column: 1
	grid-row: 4


.my-about
	grid-column: 1/3
	grid-row: 6


@media screen and (max-width: 480px)
	.my-about, .my-stats, .my-ninja-info, .my-long-info, .my-info
		grid-column: 1
		grid-row: auto
	.my-container
		grid-template-columns: 100%
	.my-name
		font-size: 36pt