// Mobile niceness
@media screen and (max-width: 480px)
	.my-about, .my-stats, .my-ninja-info, .my-long-info, .my-info, .my-name
		grid-column: 1
	.my-image
		grid-column: 1
	.my-container
		grid-template-columns: 100%
	.my-name
		font-size: 36pt