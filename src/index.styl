mobile-row(n)
	@media screen and (max-width: 500px)
		grid-row: n
		grid-column: 1

@media screen and (max-width: 500px)
	.my-container
		grid-auto-columns: 1fr




.my-flex-grid
	display: flex

.my-col
	flex: 1

.my-bold
	font-weight: bold
	margin-right: 5px

.my-ul
	margin: 0

	li::marker
		content: 'â–¶'
		font-size: .75em
ul.my-no-tag
	margin: 0
	li::marker
		content: ''

.inline-block
	display: inline-block









.my-container
	padding-top: 20px
	display: grid
	// grid-template-columns: calc(40% - 7px) calc(10% - 8px) calc(10% - 8px) calc(40% - 7px)
	grid-auto-columns: 1fr 1fr 1fr 1fr
	grid-gap: 10px
	color: yellow
	background-image: url('https://previews.123rf.com/images/franzidraws/franzidraws1709/franzidraws170900026/88404898-hand-drawn-seamless-wave-pattern-in-blue.jpg')
	background-size: 25%



.my-box
	border: 1px solid black
	padding: 5px
	background-color: rgba(1,1,1,0.5)

.my-spoiler-controller
	display: none

	&:not(:checked) + .spoiled
		max-height: 50px
		overflow: hidden
		text-overflow: ellipsis
		background: linear-gradient(180deg, rgba(255,255,0,1) 25%, rgba(255,255,0,0) 100%)
		background-clip: text
		color: white
		color: rgba(0,0,0,0)


	&:checked + .spoiled
		max-height: auto
		overflow: auto
		text-overflow: auto
		background-color: rgba(0,0,0,0)
		color: inherit






.my-title
	color: #00c3ff
	font-size: 24pt
	line-height: 1em

.my-name
	grid-column: 1/5
	grid-row: 1
	font-size: 72pt
	text-align: center
	mobile-row: 1

	& .inline-block
		height: 1em
		display: inline-block
		position: relative
		background: yellow
		// background: linear-gradient(90deg, #00c3ff 0%, #ffff00 100%)
		background-clip: text
		color: white
		color: rgba(0,0,0,0)


.my-info
	grid-column: 1/4
	grid-row: 2
	mobile-row: 2

.my-importants
	grid-column: 1/4
	grid-row: 3
	mobile-row: 3

.my-skillable
	grid-column: 4
	grid-row: 2/4
	mobile-row: 4

.my-stats
	grid-column: 1/3
	grid-row: 4
	mobile-row: 7

.my-items
	grid-column: 1/3
	grid-row: 5
	mobile-row: 5

.my-jutsu
	grid-column: 3/5
	grid-row: 4/7
	mobile-row: 6

.my-unique-abilities
	grid-column: 1/5
	grid-row: 7
	mobile-row: 8



